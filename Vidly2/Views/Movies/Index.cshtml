@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-striped">
    @if (Model.Count() == 0)
    {
        <li class="alert alert-info">Ain't got any movies for renting ;(!!!</li>
    }

    else
    {
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>

        foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name.ToString(), "Details", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name.ToString()</td>
            </tr>
        }
    }


</table>

